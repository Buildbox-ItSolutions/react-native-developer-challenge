{
    "parser": "babel-eslint",
    "env": {
      "es6": true
    },
    "extends": ["airbnb"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "__DEV__": true,
      "it": true,
      "expect": true,
      "describe": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "react", 
      "jsx-a11y"
    ],
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".js"] }],
      "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
      "import/prefer-default-export": "off",
      "global-require": 0
    },
    "settings": {
      "import/resolver": {
        "babel-plugin-root-import": {}
      }
    }
  }